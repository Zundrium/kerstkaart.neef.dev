<canvas id="three-canvas"></canvas>

<style>
  #three-canvas {
    position: fixed;
    top: 0;
    left: 0;
    outline: none;
  }
</style>

<script>
  import * as SPLAT from '@mkkellogg/gaussian-splats-3d';

  const canvas = document.getElementById('three-canvas');
  const viewer = new SPLAT.Viewer({
    canvas: canvas,
    selfDriven: false,
  });

  viewer.addSplat(new SPLAT.Splat('/geom/scene.ksplat'))
    .then(() => {
      function animate() {
        requestAnimationFrame(animate);
        viewer.update();
        viewer.render();
      }
      animate();
    });
</script>
